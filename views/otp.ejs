<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Saira+Condensed:wght@600&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style-otp.css">
    <script src="/js/script-otp.js"></script>

    <title>Lucky Draw OTP</title>
</head>

<body>
    <div class="container-fluid">
        <div class="col">

            <div class="center">
                <div class="title">Email Validation</div>
            </div>
            <div class="center">
                <input type="text" name="name" onkeydown="return /[a-zก-๏]/i.test(event.key)" id="name"
                    class="text-user" placeholder="ใส่ชื่อ" required />
            </div>
            <div class="center">
                <input type="text" name="surname" onkeydown="return /[a-zก-๏]/i.test(event.key)" id="surname"
                    class="text-user" placeholder="ใส่นามสกุล" required />
            </div>
            <div class="center">
                <input type="tel" name="phone" onkeydown="return /[0-9]/i.test(event.key)" maxLength="10" id="phone"
                    class="text-user" placeholder="ใส่เบอร์โทร" required />
            </div>
            <div class="center">
                <input type="email" name="email" id="email" class="text-user" placeholder="ใส่ Email" required />
            </div>
            <div class="spacemini"></div>
            <div class="center">
                <button onclick="SendEmail()" class="button-OTP">Send OTP</button>
            </div>

            <div class="space"></div>
            <div class="stem"></div>
            <div class="spacemini"></div>

            <form id="addForm">
                <div class="center">
                    <div class="title">Verify OTP</div>
                </div>
                <div class="spacemini"></div>
                <div class="center">
                    <div id="inputs" class="inputs">
                        <input id="input1" class="input" onclick="input()" type="text" inputmode="numeric" maxlength="1"
                            required />
                        <input id="input2" class="input" onclick="input()" type="text" inputmode="numeric" maxlength="1"
                            required />
                        <input id="input3" class="input" onclick="input()" type="text" inputmode="numeric" maxlength="1"
                            required />
                        <input id="input4" class="input" onclick="input()" type="text" inputmode="numeric" maxlength="1"
                            required />
                    </div>
                </div>
                <div class="center">
                    <div class="time">Timer left = <span id="timer">0:00</span></div>
                </div>
                <div class="spacemini"></div>
                <div class="center">
                    <button type="submit" class="button-Verify" onclick="VerifyOTP()">Verify</button>
                </div>
                <div class="space"></div>
            </form>
        </div>
    </div>
    
    <script>
        document.getElementById('phone').onkeydown = function (e) {
            var key = e.keyCode ? e.keyCode : e.which;
            if (key && (key <= 47 || key >= 58) && key != 8 ) return false;
        }
    </script>

    <script src="https://smtpjs.com/v3/smtp.js"></script>
</body>

</html>